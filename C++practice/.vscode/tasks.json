{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++-14 アクティブなファイルのビルド",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "GNU g++-14 を使用してビルド"
        }
    ],
    "version": "2.0.0"
}
